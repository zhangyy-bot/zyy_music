/* components/song-menu-area/index.wxss */
.menu-list {
  /* 不换行 */
  white-space: nowrap;
  /* 视口宽度 */
  width: 100vw;
  position: relative;
  left: -20rpx;
}

.menu-item {
  display: inline-block;
  /* height: 200rpx; */
  /* background-color: #f00; */
  margin-left: 20rpx;
  /* 解决某些机型上item对不齐的状况 */
  vertical-align: top;
}

.menu-item:last-of-type {
  margin-right: 20rpx;
}