/* pages/detail-search/index.wxss */
page {
  padding: 0 20rpx;
  padding-top: 100rpx;
}
/* 搜索框 */
.search {
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
}
/* 这两个类名是怎么来的呢？通过调试器里面的Wxml找的 */
.van-search {
  padding: 10px 0 !important;
}
.van-search__content {
  background-color: #fff !important;
}
.hot {
  padding: 10rpx;
}
.keywords {
  display: flex;
  flex-wrap: wrap;
}
.keywords .tag {
  font-size: 26rpx;
  background-color: #fff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.keywords .tag:first-of-type {
  color: #26ce8a;
}
.suggest {
  padding: 10rpx;
}
.suggest .title {
  color: #26ce8a;
  font-size: 30rpx;
  font-weight: 700;
}
.suggest .item {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}
.suggest .item .icon {
  width: 66rpx;
  margin-left: -20rpx;
}
.suggest .item .text {
  font-size: 28rpx;
}
/* 搜索结果 */
.result .title {
  font-size: 32rpx;
  color: #26ce8a
}